<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/activity_body"



    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >







        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:id="@+id/MotherTop"
            android:focusable="false"
            >





            <com.sepidsa.calculator.AutoResizeTextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray"
                style="@style/text_switcher"
                android:text="0"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:paddingRight="@dimen/padding_large"
                app:minTextSize="3sp"



                />

            <TextView
                android:id="@+id/scientific_mode_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/padding_small"
                android:text="RAD"
               />


            <TextView
                android:id="@+id/m_vaiable_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/scientific_mode_textview"
                android:background="@android:color/transparent"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/padding_small"
                android:text=" M = 0"
                android:inputType="textMultiLine|textNoSuggestions"

                />

            <ImageButton
                android:id="@+id/add_to_favorites"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                 android:layout_alignParentBottom="true"
                android:src="@drawable/favourite4"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                />



        </RelativeLayout>




        <EditText
            android:id="@+id/tag_himself"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:inputType="text"
            android:layout_weight="1"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:focusable="false"
            >


            <com.sepidsa.calculator.AutoResizeTextView
                android:id="@+id/translationEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/translation_box"
                android:paddingRight="@dimen/padding_large"
                android:scrollbars = "vertical"
                android:background="@android:color/transparent"
                android:focusable="false"
                />

            <ImageButton
                android:id="@+id/favorites_list"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/favorite_list"
                android:visibility="visible"

                />






        </RelativeLayout>



    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:orientation="vertical"

        >

            <android.support.v4.view.ViewPager
                android:id="@+id/portrait_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="91"
                style="@style/viewpager"
                android:tag="portrait_phone"

                />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/view_pager_indicator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:paddingTop="2dp"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:orientation="horizontal"
                android:background="@android:color/transparent"

                >

                <Button
                    android:id="@+id/buttonSettings"
                    style="@style/icon_button.portrait"
                    android:layout_weight="1"
                    android:text="@string/settings"
                    android:tag="feedback"
                    android:gravity="center_horizontal"


                    android:textColor="#DADFE1"

                    />

                <Button
                    android:id="@+id/buttonLanguage"
                    android:layout_weight="1"
                    android:text="@string/language"
                    android:tag="@string/language"
                    android:gravity="center_horizontal"
                    style="@style/icon_button.portrait"
                    android:textColor="#DADFE1"

                    />



                <Button
                    android:id="@+id/buttonMute"
                    style="@style/icon_button.portrait"
                    android:layout_weight="1"
                    android:text="@string/volume_high"
                    android:tag="@string/volume_high"
                    android:gravity="center_horizontal"
                    android:textColor="#DADFE1"


                    />

                <Button
                    android:id="@+id/buttonColors"
                    style="@style/icon_button.portrait"
                    android:layout_weight="1"
                    android:text="q"
                    android:textColor="#DADFE1"
                    android:tag="q"
                    android:gravity="center_horizontal"

                    />

                <Button
                    android:id="@+id/buttonParallax"
                    style="@style/icon_button.portrait"
                    android:layout_weight="1"
                    android:text="p"
                    android:textColor="#DADFE1"
                    android:tag="p"
                    android:gravity="center_horizontal"

                    />


            </LinearLayout>

    </LinearLayout>
    </LinearLayout>


</RelativeLayout>





