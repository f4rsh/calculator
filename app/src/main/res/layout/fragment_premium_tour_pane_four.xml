<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/background"
    android:background="#795548"
    android:orientation="vertical"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/become_premium"
        android:background="@drawable/button_border"
        android:padding="@dimen/padding_large"
        android:layout_marginTop="@dimen/abc_control_padding_material"
        android:textColor="@android:color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/tour_descriptive_icon"
            android:src="@drawable/premium_constant"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tour_screenshot"
            android:layout_margin="@dimen/padding_large"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:id="@+id/tour_title"
            android:text="ثابت های جدید"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFEB3B"
            android:layout_below= "@+id/tour_descriptive_icon"

            />
        <TextView

            android:id="@+id/tour_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text= "سرعت نور، قطر خورشید و یا حتی قیمت یک کیلو شیرینی رو به عنوان یک ثابت ذخیره کنید"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@+id/tour_title"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>